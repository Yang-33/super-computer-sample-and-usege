# ----------------------------------------------------------------
# environment
CC		= mpifccpx
FC		= 

# ----------------------------------------------------------------
# options

CFLAGS		= -Kfast,openmp -SSL2BLAMP
FFLAGS		= 

# ----------------------------------------------------------------
# sources and objects

C_SRC		= mat-mat-blas.c
F_SRC		= 

C_OBJ		= $(C_SRC:.c=)
F_OBJ		= $(F_SRC:.f=)

# ----------------------------------------------------------------
# executables

EXEC		= $(C_OBJ) 

all:		$(EXEC)

$(C_OBJ):	$(C_SRC)
	$(CC) -o $@ $(CFLAGS) $(C_SRC)


# ----------------------------------------------------------------
# rules

.c.:
	$(CC) -o $* $(CFLAGS) -c $<

.f.:
	$(FC) -o $* $(FFLAGS) -c $<

# ----------------------------------------------------------------
# clean up

clean:
	/bin/rm -f $(EXEC) $(C_SRC:.c=.o)

# ----------------------------------------------------------------
# End of Makefile
